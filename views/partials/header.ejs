<body class="gradient-background-main d-flex flex-column min-vh-100">
    <header class="p-3 text-bg-dark">
        <div class="container">
            <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
                <a href="/" class="d-flex align-items-center mb-2 mb-lg-0 text-white text-decoration-none">
                    <img src="images/icon.png" class="bi me-2 rounded-circle" width="40" height="40" alt="note-icon">
                </a>
                <span class="fs-2 fw-bold px-4 amatic-font">
                    TimeTower
                </span>

                <ul class="nav flex-sm-row col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
                    <li><a href="/submit" class="nav-link px-2 nav-btn <%= notePage==="home" ? "text-secondary"
                            : "text-white" %>">Home</a></li>
                    <li><a href="/features" class="nav-link px-2 nav-btn <%= notePage==="features" ? "text-secondary"
                            : "text-white" %>">Features</a></li>
                    <li><a href="/pricing" class="nav-link px-2 nav-btn <%= notePage==="pricing" ? "text-secondary"
                            : "text-white" %>">Pricing</a></li>
                    <li><a href="/faq" class="nav-link px-2 nav-btn <%= notePage==="faq" ? "text-secondary"
                            : "text-white" %>">FAQs</a></li>
                    <li><a href="/about" class="nav-link px-2 nav-btn <%= notePage==="about" ? "text-secondary"
                            : "text-white" %>">About</a></li>
                </ul>

                <div class="text-center">
                    <% if (userSignedUp===1) { %>
                        <div class="profile fs-5">
                            <i class="fa-regular fa-user mx-2"></i>
                            <%= userName %>

                            <% if(planIndex === 0) {%>
                                <div class="px-2 rounded fs-4 text-center basic-plan amatic-font">
                                    <%= planList[planIndex] %>
                                </div>
                            <% } else if(planIndex === 1) { %>
                                <div class="px-2 rounded fs-4 text-center pro-plan amatic-font">
                                    <i class="fa-solid fa-chess-king fa-flip px-2"></i>
                                    <%= planList[planIndex] %>
                                </div>
                            <% } else{ %>
                                <div class="px-2 rounded fs-4 text-center premium-plan amatic-font">
                                    <i class="fa-solid fa-crown fa-flip px-2"></i>
                                    <%= planList[planIndex] %>
                                </div>
                            <% } %>
                        
                    <% } else { %>
                        <a href="/signup">
                            <button type="button" class="btn btn-outline-light me-2">Sign Up</button>
                        </a>
                        </div>
                    <% } %>
                    
                    
                </div>
            </div>
        </div>
        </div>
    </header>

